<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    tools:layout_width="180dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:elevation="5dp"
        app:cardCornerRadius="3dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/group_item_icon"
                tools:src="@color/primary_dark"
                android:transitionName="@string/icon_transition_name"
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/group_item_name"
                tools:text="Group name very very long"
                android:textSize="@dimen/txt_small"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:transitionName="@string/name_transition_name"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>